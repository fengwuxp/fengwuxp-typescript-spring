{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
    "importHelpers": true,
    "types": [
      "node",
      "rollup"
    ],
    "lib": [
      "dom",
      "es5",
      "es2015",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
