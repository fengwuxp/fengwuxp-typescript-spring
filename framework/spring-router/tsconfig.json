{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
//    "compileOnSave": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "./src",
    "declaration": true,
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
