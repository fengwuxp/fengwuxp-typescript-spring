{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./*"
      ],
      "@feign/*": [
        "./feign/*"
      ],
      "@enums/*": [
        "./enums/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@constant/*": [
        "./constant/*"
      ],
      "@container/*": [
        "./container/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
